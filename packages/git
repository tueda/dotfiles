pkgname=git
pkgver=2.13.1

do_install() {
  PATH=/usr/local/bin:/usr/bin:/bin
  unset LD_LIBRARY_PATH LD_RUN_PATH
  download https://github.com/git/git/archive/v$pkgver.tar.gz
  cd $pkgname-$pkgver
  args=
  if [ -d $LOCAL_BUILD_ROOT/openssl-1.1.0f ]; then
    args="$args --with-openssl=$LOCAL_BUILD_ROOT/openssl-1.1.0f"
  fi
  make configure
  ./configure --prefix="$prefix" $args
  make
  make install
}

do_postinstall() {
  rc_prepend_path PATH "$prefix/bin"
}

