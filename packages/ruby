pkgname=ruby
pkgver=2.4.2

do_install() {
  PATH=/usr/local/bin:/usr/bin:/bin
  unset LD_LIBRARY_PATH LD_RUN_PATH
  download https://cache.ruby-lang.org/pub/ruby/2.4/$pkgname-$pkgver.tar.gz
  cd $pkgname-$pkgver
  args=--disable-install-doc
  if [ -d $LOCAL_BUILD_ROOT/openssl-1.1.0f ]; then
    args="$args --with-opt-dir=$LOCAL_BUILD_ROOT/openssl-1.1.0f --enable-shared"
  fi
  ./configure --prefix="$prefix" $args
  make
# make check
  make install
}

do_postinstall() {
  rc_prepend_path PATH "$prefix/bin"
}

# vim: ft=sh et ts=8 sts=2 sw=2
